{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "lib": [
          "es2021",
          "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "target": "es2021",
        "forceConsistentCasingInFileNames": true,
        "rootDir": "src"
      },
      "include": [
        "src/**/*",
        "global.d.ts"
      ],
      "exclude": [
        "node_modules",
        "tests/**/*"
      ]
}